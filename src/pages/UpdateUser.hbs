<div class="columns is-vcentered">
    <div class="column is-two-thirds">
        {{> TitleBar title="PlaceMark" subTitle="User Settings"}}
    </div>
    <div class="column">
        {{> MainNavigator }}
    </div>
</div>

<form class="box"  action="/userSettings/updateUser/{{user._id}}" method="POST">
    <label>Update User Details:</label>
    <div class="field is-horizontal">
        <div class="field-body">
            <div class="field">
                <input class="input" type="text" name="firstName", value="{{user.firstName}}">
            </div>
            <div class="field">
                <input class="input" type="text" name="lastName" value="{{user.lastName}}">
            </div>
            <div class="field">
                <input class="input" type="text"  name="email" value="{{user.email}}">
            </div>

            <div class="field">
                <input class="input" type=password  name="password" value="{{user.password}}">
            </div>
        </div>
    </div>
    <button class="button is-primary">Update User</button>
</form>